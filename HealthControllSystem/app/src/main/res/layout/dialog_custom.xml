<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="@drawable/shape_bg_white_1">
        <TextView
            android:id="@+id/text_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="@drawable/shape_bg_white_2"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="密码错误!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="@drawable/shape_bg_white_3">
            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/bt_confirm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:layout_weight="1"/>
            <View
                android:id="@+id/view_division_ver"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black_divider"
                android:visibility="gone"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/bt_cancel"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/green"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>